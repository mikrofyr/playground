sudo ifconfig wlan0 mtu 512
sudo iwconfig wlan0 power off #set powersaving to off

sudo iwconfig wlan0 rate 54M #Locks the rate of the connection to54MBs to help with unecesary fallback
sudo iwconfig wlan0 sens -80 #the sensitivity of the card set to -80dbm, this may work depending on the drivers and card
sudo iwconfig wlan0 txpower 40
sudo iwconfig commit

sudo iw reg set NO

sudo iwconfig wlan0 ap off

